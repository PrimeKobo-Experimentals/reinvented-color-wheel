{
  "name": "reinvented-color-wheel",
  "version": "0.1.4",
  "description": "A vanilla-js touch-friendly HSV color picker inspired by Farbtastic Color Picker.",
  "repository": "luncheon/reinvented-color-wheel",
  "main": "cjs/reinvented-color-wheel.js",
  "module": "es/reinvented-color-wheel.js",
  "types": "es/reinvented-color-wheel.d.ts",
  "jsdelivr": "iife/reinvented-color-wheel.min.js",
  "unpkg": "iife/reinvented-color-wheel.min.js",
  "files": [
    "css/",
    "es/",
    "cjs/",
    "iife/"
  ],
  "scripts": {
    "clean": "rimraf css/ es/ cjs/ iife/",
    "build": "npm run clean && npm run build:css && npm run build:css:min && npm run build:es && npm run build:bundle && npm run build:docs",
    "build:css": "cpx src/reinvented-color-wheel.css css/",
    "build:css:min": "postcss css/reinvented-color-wheel.css -o css/reinvented-color-wheel.min.css -u cssnano --no-map",
    "build:es": "tsc -p . --outDir es/",
    "build:bundle": "rollup -c",
    "build:docs": "cpx css/reinvented-color-wheel.min.css docs/ && cpx iife/reinvented-color-wheel.min.js docs/"
  },
  "keywords": [
    "color",
    "wheel",
    "picker",
    "color-picker",
    "vanilla",
    "vanilla-js"
  ],
  "author": "",
  "license": "WTFPL",
  "devDependencies": {
    "cpx": "^1.5.0",
    "cssnano": "^4.1.0",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.65.0",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-terser": "^1.0.1",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "pure-color": "^1.3.0"
  }
}
