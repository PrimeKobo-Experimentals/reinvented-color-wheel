{
  "name": "reinvented-color-wheel",
  "version": "0.0.0",
  "description": "A vanilla-js HSV color picker inspired by Farbtastic Color Picker.",
  "main": "reinvented-color-wheel.cjs.js",
  "module": "reinvented-color-wheel.mjs",
  "types": "reinvented-color-wheel.d.ts",
  "jsdelivr": "reinvented-color-wheel.iife.min.js",
  "unpkg": "reinvented-color-wheel.iife.min.js",
  "files": [
    "reinvented-color-wheel.css",
    "reinvented-color-wheel.min.css",
    "reinvented-color-wheel.mjs",
    "reinvented-color-wheel.cjs.js",
    "reinvented-color-wheel.iife.js",
    "reinvented-color-wheel.iife.min.js",
    "reinvented-color-wheel.d.ts"
  ],
  "scripts": {
    "clean": "rimraf reinvented-color-wheel.min.css reinvented-color-wheel.mjs reinvented-color-wheel.*.js reinvented-color-wheel.d.ts",
    "build": "npm run clean && npm run build:css && npm run build:es && npm run build:cjs && npm run build:iife && npm run build:iife:min && npm run build:docs",
    "build:css": "postcss reinvented-color-wheel.css -o reinvented-color-wheel.min.css -u cssnano --no-map",
    "build:es": "tsc -p . --outDir ./ && node -e \"require('fs').renameSync('reinvented-color-wheel.js','reinvented-color-wheel.mjs')\"",
    "build:cjs": "tsc -p . --outDir ./ -m commonjs && node -e \"require('fs').renameSync('reinvented-color-wheel.js','reinvented-color-wheel.cjs.js')\"",
    "build:iife": "rollup -c -f iife -n ReinventedColorWheel -i reinvented-color-wheel.mjs -o reinvented-color-wheel.iife.js",
    "build:iife:min": "uglifyjs -m -c join_vars=true -o reinvented-color-wheel.iife.min.js reinvented-color-wheel.iife.js",
    "build:docs": "node -e \"var fs=require('fs');fs.copyFileSync('reinvented-color-wheel.min.css','docs/reinvented-color-wheel.min.css');fs.copyFileSync('reinvented-color-wheel.iife.min.js','docs/reinvented-color-wheel.iife.min.js');\""
  },
  "keywords": [
    "color",
    "wheel",
    "picker",
    "color-picker",
    "vanilla",
    "vanilla-js"
  ],
  "author": "",
  "license": "WTFPL",
  "devDependencies": {
    "cssnano": "^4.0.5",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.64.1",
    "rollup-plugin-commonjs": "^9.1.5",
    "rollup-plugin-node-resolve": "^3.3.0",
    "typescript": "^3.0.1",
    "uglify-js": "^3.4.7"
  },
  "dependencies": {
    "pure-color": "^1.3.0"
  }
}
