{
  "name": "reinvented-color-wheel",
  "version": "0.0.0",
  "description": "A vanilla-js color picker inspired by Farbtastic.",
  "main": "reinvented-color-wheel.js",
  "module": "reinvented-color-wheel.mjs",
  "types": "reinvented-color-wheel.d.ts",
  "scripts": {
    "clean": "rimraf reinvented-color-wheel.mjs reinvented-color-wheel.js reinvented-color-wheel.min.js reinvented-color-wheel.d.ts",
    "build": "npm run clean && npm run build:es && npm run build:umd && npm run build:umd:min",
    "build:es": "tsc -p . --outDir ./ && node -e \"require('fs').renameSync('reinvented-color-wheel.js','reinvented-color-wheel.mjs')\"",
    "build:umd": "rollup -c -f umd -n ReinventedColorWheel -i reinvented-color-wheel.mjs -o reinvented-color-wheel.js",
    "build:umd:min": "uglifyjs -m -c join_vars=true -o reinvented-color-wheel.min.js reinvented-color-wheel.js"
  },
  "keywords": [
    "color",
    "wheel",
    "picker",
    "color-picker",
    "vanilla",
    "vanilla-js"
  ],
  "author": "",
  "license": "WTFPL",
  "devDependencies": {
    "rimraf": "^2.6.2",
    "rollup": "^0.64.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "typescript": "^3.0.1",
    "uglify-js": "^3.4.7"
  }
}
